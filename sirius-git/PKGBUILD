pkgver() {
	cd "$pkgname"
	git describe --long --tags | sed 's/\([^-]*-g\)/r\1/;s/-/./g'
}

prepare() {
	cd "${srcdr}/${_gitname}/{sirius-application}"
	./get-opencv.sh
}

build()= {
	cd "${srcdir}/${_gitname}"
	./compile-sirius-servers.sh

}

