pkgname=sirius-git
_gitname=sirius
pkgver=1.0.r99.gc53543b
pkgrel=1
pkgdesc="A speech and vision based intelligent personal assistant"
arch=(x86_64) #TODO
url="http://sirius.clarity-lab.org/"
license=('BSD')
depends=('ffmpeg'
	 'tesseract' 'tesseract-data-eng' 'atlas-lapack'
) # tesseract libs only? leptonica ommited as being dep of tesseract; jdk7?
makedepends=('git' 'apache-ant' 'automake' 'autoconf' 'libtool' 'bison' 'boost-libs' 'swig' 'opencv' 'openfst')
#only boost-libs and git? else in base/ base-devel?
# optdepends=(':	'
#	    ':'	     )
source=('sirius::git+https://github.com/jhauswald/sirius#branch=master')
md5sums=("SKIP")

pkgver() {
	cd "$pkgname"
	git describe --long | sed 's/^sirius-application-//;s/\([^-]*-g\)/r\1/;s/-/./g'
}

prepare() {
	# deps handled
	cd "${srcdr}/${_gitname}/{sirius-applicaton}"
	./get-kaldi.sh
	# opencv handled
	# compile in build
}

build() {
	cd "${srcdir}/${_gitname}"
	./compile-sirius-servers.sh
}
